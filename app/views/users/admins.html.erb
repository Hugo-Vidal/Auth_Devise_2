<div class="row">
  <div class="col-xs-8 col-sm-10 col-md-10">
    <h1>Usuarios</h1>
  </div>
  <div class="col-xs-4 col-sm-2 col-md-2">
    <%= link_to 'Nuevo Usuario', new_user_registration_path, class: "btn btn-info btn-sm" %>
  </div>
</div>


<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Usuario</th>
      <th scope="col">Correo</th>
      <th scope="col">Editar </th>
            <th scope="col"> </th>
    </tr>
  </thead>
  <tbody>
      <% @users.each do |user| %>
      <tr>
        <td class="mb-2">
          <%= user.name %> 
        </td>
        <td class="mb-2">
          <%= user.username %> 
        </td>
        <td class="mb-2">
          <%= user.email %> 
        </td>
        <%= form_with model: @user, local: true do |f| %>
            <td class="mb-2">
                <div class="field">
                    <%= label_tag :admin, "Administrador" %>
                    <%= f.check_box :admin %>
                </div>
            </td>
            <td class="mb-2">
                <div class="actions">
                    <%= f.submit "Modificar", :class =>"btn btn-primary btn-sm" %>
                </div>
            </td>
        <% end %>
      </tr>
      <% end %>
  </tbody>
</table>

<br>